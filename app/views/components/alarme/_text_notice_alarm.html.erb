<div class="modal fade" id="textNoticeAlarm" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Texto de exibição</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <span id ="idDeviceModal" hidden></span>
        <div class="mb-3">
          <label class="form-label" for="newNoticeAlarm" >Alterar:</label>
          <input type="text" class="form-control" name="newNoticeAlarm" id="newNoticeAlarm" value="<%= button.obs %>">
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="button" class="btn btn-primary" data-bs-dismiss="modal" data-id="<%= button.id %>" data-action="click->iot#set_text_alert">Alterar</button>
      </div>
    </div>
  </div>
</div>